version: "3.5"

networks:
  {{Network.Name}}:
    external: {{Network.External}}

services:
{# Generate Orderers #}

{# Generate Peers #}
{% for org in PeerOrgs %}
{% for num in range(org.Template.Count)%}
  peer{{num}}{{org.Name | lower}}:
    image: hyperledger/fabric-peer:x86_64-1.1.0
    environment:
      - CORE_VM_ENDPOINT=unix:///host/var/run/docker.sock
      - CORE_VM_DOCKER_HOSTCONFIG_NETWORKMODE={{Network.Name}}
      - CORE_LOGGING_LEVEL=DEBUG
      - CORE_PEER_PROFILE_ENABLED=true
      - CORE_PEER_GOSSIP_USELEADERELECTION=true
      - CORE_PEER_GOSSIP_ORGLEADER=false

      - CORE_PEER_TLS_ENABLED=false
      - CORE_PEER_TLS_CERT_FILE=/etc/hyperledger/fabric/tls/server.crt
      - CORE_PEER_TLS_KEY_FILE=/etc/hyperledger/fabric/tls/server.key
      - CORE_PEER_TLS_ROOTCERT_FILE=/etc/hyperledger/fabric/tls/ca.crt

      - CORE_PEER_ID=peer{{num}}.{{org.Domain}}
      - CORE_PEER_ADDRESS=peer{{num}}.{{org.Domain}}:7051
      - CORE_PEER_CHAINCODEADDRESS=peer{{num}}.{{org.Domain}}:7052
      - CORE_PEER_CHAINCODELISTENADDRESS=0.0.0.0:7052
      - CORE_PEER_GOSSIP_EXTERNALENDPOINT=peer{{num}}.{{org.Domain}}:7051
      - CORE_PEER_LOCALMSPID={{org.Name}}MSP
    working_dir: /opt/gopath/src/github.com/hyperledger/fabric/peer
    command: peer node start
    volumes:
      - /var/run/:/host/var/run/
      - {{CryptoPath}}/peerOrganizations/{{org.Domain}}/peers/peer{{num}}.{{org.Domain}}/msp:/etc/hyperledger/fabric/msp
      - {{CryptoPath}}/peerOrganizations/{{org.Domain}}/peers/peer{{num}}.{{org.Domain}}/tls:/etc/hyperledger/fabric/tls
    networks:
      {{Network.Name}}:
        aliases:
          - peer{{num}}.{{org.Domain}}
{% endfor %}
{% endfor %}
